<Window x:Class="VideoSplitter.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Video Splitter"
        Height="600"
        Width="900"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="入力ファイル" FontWeight="Bold" />
        <DockPanel Grid.Row="1" Margin="0,8,0,0">
            <TextBox Text="{Binding InputFilePath, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,0,8,0" MinWidth="400" AllowDrop="True" PreviewDragOver="InputTextBox_PreviewDragOver" PreviewDrop="InputTextBox_PreviewDrop" />
            <Button Content="参照..." Width="90" Click="BrowseInput_Click" Margin="0,0,8,0" />
            <Button Content="クリア" Width="70" Click="ClearInput_Click" />
        </DockPanel>

        <TextBlock Grid.Row="2" Text="出力フォルダー" FontWeight="Bold" Margin="0,16,0,0" />
        <DockPanel Grid.Row="3" Margin="0,8,0,0">
            <TextBox Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0" MinWidth="400" />
            <Button Content="選択..." Width="90" Click="BrowseOutput_Click" />
        </DockPanel>

        <GroupBox Grid.Row="4" Header="しきい値" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" Margin="8">
                <StackPanel Margin="0,0,24,0">
                    <TextBlock Text="最大サイズ (GB)" />
                    <DockPanel>
                        <TextBox Text="{Binding MaxSizeGb, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" Width="100" HorizontalContentAlignment="Right" Margin="0,0,4,0" />
                        <StackPanel Orientation="Vertical">
                            <Button Content="▲" Width="24" Height="18" Click="SizeUp_Click" />
                            <Button Content="▼" Width="24" Height="18" Click="SizeDown_Click" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="最大時間 (分)" />
                    <DockPanel>
                        <TextBox Text="{Binding MaxDurationMinutes, UpdateSourceTrigger=PropertyChanged, StringFormat=F0}" Width="100" HorizontalContentAlignment="Right" Margin="0,0,4,0" />
                        <StackPanel Orientation="Vertical">
                            <Button Content="▲" Width="24" Height="18" Click="DurationUp_Click" />
                            <Button Content="▼" Width="24" Height="18" Click="DurationDown_Click" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Left">
            <Button Content="実行" Width="120" Command="{Binding StartCommand}" />
            <Button Content="キャンセル" Width="120" Command="{Binding CancelCommand}" Margin="8,0,0,0" />
            <Button Content="フォルダーを開く" Width="140" Click="OpenFolder_Click" Margin="8,0,0,0" />
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="0,16,0,0">
            <ProgressBar Height="24" Minimum="0" Maximum="100" Value="{Binding ProgressValue}" IsIndeterminate="{Binding IsIndeterminate}" />
        </StackPanel>

        <TextBlock Grid.Row="7" Text="{Binding StatusMessage}" Margin="0,8,0,8" FontStyle="Italic" />

        <GroupBox Grid.Row="8" Header="ログ" Margin="0,16,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="最新のログが下部に表示されます" FontSize="12" Foreground="Gray" />
                <ListBox Grid.Row="1" ItemsSource="{Binding Logs}" Name="LogListBox" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
